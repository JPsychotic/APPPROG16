<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="10dp">

    <TextView
        android:id="@+id/settingsTitle"
        android:text="Einstellungen"
        android:textSize="35dp"
        android:layout_width="fill_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        />

    <Switch
        android:id="@+id/sprachausgabeSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/settingsTitle"
        android:switchMinWidth="0dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:enabled="true"
        android:text="Sprachausgabe                   "
        android:checked="true"/>

    <TextView android:text="Muss hier noch was hin?"
              android:id="@+id/favosTitel"
              android:layout_below="@id/sprachausgabeSwitch"
              android:layout_marginBottom="10dp"
              android:textSize="18dp"
              android:gravity="center"
              android:layout_centerHorizontal="true"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
<RelativeLayout
    android:layout_below="@id/favosTitel"
    android:id="@+id/radiobtn_container"
    android:layout_gravity="center"
    android:layout_centerHorizontal="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/radio_buttons1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
        <RadioButton android:id="@+id/option1"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Ja"/>
        <RadioButton android:id="@+id/option2"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Nein"/>
        <RadioButton android:id="@+id/option3"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Vielleicht"
                     android:checked="true"/>
    </RadioGroup>
</RelativeLayout>
    <Button android:id="@+id/swttingsCloseButton"
            android:layout_below="@id/radiobtn_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:text="Close" />

</RelativeLayout>